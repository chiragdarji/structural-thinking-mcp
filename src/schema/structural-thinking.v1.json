{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Structural Thinking v1",
  "type": "object",
  "required": [
    "version",
    "intent",
    "instructions",
    "io"
  ],
  "properties": {
    "version": {
      "const": "1.0"
    },
    "intent": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string"
    },
    "context": {
      "type": "object",
      "properties": {
        "domain": {
          "enum": [
            "code",
            "docs",
            "data",
            "product",
            "research"
          ]
        },
        "inputs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type",
              "ref"
            ],
            "properties": {
              "type": {
                "enum": [
                  "file",
                  "text",
                  "url"
                ]
              },
              "ref": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "instructions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "io": {
      "type": "object",
      "required": [
        "format"
      ],
      "properties": {
        "format": {
          "enum": [
            "markdown",
            "json",
            "csv",
            "text"
          ]
        },
        "contract": {
          "type": "object",
          "properties": {
            "sections": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "schemaRef": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "ambiguities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "message",
          "severity"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "severity": {
            "enum": [
              "info",
              "warn",
              "error"
            ]
          }
        },
        "additionalProperties": false
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "clarity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "completeness": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": false
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}