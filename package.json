  "author": "Chirag Darji <chiragdarji.savli@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chiragdarji/structural-thinking-mcp.git"
  },
  "homepage": "https://github.com/chiragdarji/structural-thinking-mcp#readme",
  "bugs": {
    "url": "https://github.com/chiragdarji/structural-thinking-mcp/issues"
  },
  "scripts": {
